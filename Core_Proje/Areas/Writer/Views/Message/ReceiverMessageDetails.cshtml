@model EntityLayer.Concrete.WriterMessage
@{
    ViewData["Title"] = "ReceiverMessageDetails";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<h1>Message Details</h1>

<div>
    <form class="form-group">
        @Html.HiddenFor(x => x.Id)
        @Html.Label("Receiver Name")
        @Html.TextAreaFor(x => x.SenderName, new { @class = "form-control", @readonly = "readonly" })
        <br />
        @Html.Label("Receiver Mail")
        @Html.TextAreaFor(x => x.Sender, new { @class = "form-control", @readonly = "readonly" })
        <br />
        @Html.Label("Message")
        @Html.TextAreaFor(x => x.MessageContent, 10, 3, new { @class = "form-control", @readonly = "readonly" })
    </form>
</div>
