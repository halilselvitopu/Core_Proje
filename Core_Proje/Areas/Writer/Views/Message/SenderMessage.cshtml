@using EntityLayer.Concrete
@model List<WriterMessage>
@{
    ViewData["Title"] = "SenderMessage";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}



<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Sendbox</h4>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            @* <th>#</th> *@
                            <th>Subject</th>
                            <th>Receiver</th>
                            <th>Date</th>
                            <th>Details</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                      

                            <tr>
                               @*  <th>@item.Id</th> *@
                                <td>@item.Subject</td>
                                <td>@item.ReceiverName</td>
                                <td>@(((DateTime)item.Date).ToString("dd-MMM-yyyy", new System.Globalization.CultureInfo("en-US")))</td>
                                <td><a href="/Writer/Message/ReceiverMessageDetails/@item.Id" class="btn btn-primary btn-custom-sm">Show Message</a></td>
                            </tr>

                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

