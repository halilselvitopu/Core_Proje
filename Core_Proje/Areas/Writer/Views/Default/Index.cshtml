@using EntityLayer.Concrete
@model List<Announcement>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

@{
    string color = "";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Announcements</h4>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Title</th>
                            <th>Date</th>
                            <th>Type</th>
                            <th>Details</th>
                        </tr>
                    </thead>
                    <tbody>
                       @foreach (var item in Model)
                        {
                            if (item.Status == "New Article")
                            {
                                color = "badge badge-danger";
                            }

                            if (item.Status == "New Video")
                            {
                                color = "badge badge-success";
                            }

                            if (item.Status == "New Education")
                            {
                                color = "badge badge-info";
                            }

                            if (item.Status == "New Announcement")
                            {
                                color = "badge badge-warning";
                            }
                            <style>
                                .btn-custom-sm {
                                    padding: 0.25rem 0.5rem;
                                    font-size: 0.875rem;
                                }
                            </style>

                            <tr>
                                <th>@item.Id</th>
                                <td>@item.Title</td>
                                <td>@(((DateTime)item.Date).ToString("dd-MMM-yyyy", new System.Globalization.CultureInfo("en-US")))</td>
                                <td><label class="@color">@item.Status</label></td>
                                <td><a href="/Writer/Default/AnnouncementDetails/@item.Id" class="btn btn-primary btn-custom-sm">Details</a></td>
                            </tr>

                        } 
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

