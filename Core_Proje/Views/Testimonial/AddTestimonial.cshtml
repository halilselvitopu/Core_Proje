@model EntityLayer.Concrete.Testimonial

@{
    ViewData["Title"] = "AddTestimonial";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}
<form  asp-action="AddTestimonial">
<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">

            <p class="card-description"> Add New Testimonial </p>
                <div class="form-group">
                    <label>Experience Name</label>
                    <input type="text" class="form-control" asp-for="@Model.ClientName">
                </div>
                <div class="form-group">
                    <label>Experience Date</label>
                    <input type="text" class="form-control" asp-for="@Model.Company">
                </div>
                <div class="form-group">
                    <label>Image URL</label>
                    <input type="text" class="form-control" asp-for="@Model.ImageUrl">
                </div>
                <div class="form-group">
                    <label>Title</label>
                    <input type="text" class="form-control" asp-for="@Model.Title">
                </div>

                <div class="form-group">
                    <label for="exampleTextarea1">Description</label>
                    <textarea class="form-control" asp-for="@Model.Comment" rows="4"></textarea>
                </div>
                <button type="submit" class="btn btn-primary mr-2">Submit</button>
                <button class="btn btn-dark">Cancel</button>
            
        </div>
    </div>
</div>

</form>