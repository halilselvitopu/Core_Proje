@model EntityLayer.Concrete.Service
@{
    ViewData["Title"] = "UpdateService";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card-header border-0">
    <h3 class="mb-0">Update Service</h3>
</div>

@using (Html.BeginForm("UpdateService", "Service", FormMethod.Post))

{

    @Html.HiddenFor(x => x.ServiceId)
    <br />
    @Html.Label("Service Title")
    @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
    <br />
    <label>Image URL</label>
    @Html.TextBoxFor(x => x.ImageUrl, new { @class = "form-control" })
    <br />
    <button class="btn btn-outline-success">Update</button>
}
