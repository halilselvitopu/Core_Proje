@model EntityLayer.Concrete.Service
@{
    ViewData["Title"] = "UpdateService";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}


@using (Html.BeginForm("UpdateService", "Service", FormMethod.Post))

{
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">

                <p class="card-description"> Update Service </p>
                <form class="forms-sample">

    @Html.HiddenFor(x => x.ServiceId)
    <br />
    @Html.Label("Service Title")
    @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
    <br />
    <label>Image URL</label>
    @Html.TextBoxFor(x => x.ImageUrl, new { @class = "form-control" })
    <br />
    <button class="btn btn-outline-success">Update</button>
                </form>
            </div>
        </div>
    </div>
}
