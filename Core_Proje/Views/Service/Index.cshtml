@using EntityLayer.Concrete
@model List<Service>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}


<!-- Light table -->
<div class="table-responsive">
    <table class="table align-items-center table-flush">
        <thead class="thead-light">
            <tr>
                <th scope="col" class="sort" data-sort="name">#</th>
                <th scope="col" class="sort" data-sort="budget">Title</th>
                

                <th scope="col">Delete</th>
                <th scope="col" class="sort" data-sort="completion">Update</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody class="list">
            @foreach (var item in Model)
            {


                <tr>
                    <th>
                        @item.ServiceId
                    </th>
                    <th class="budget">
                        @item.Title
                    </th>
                    
                    <td><a href="/Service/DeleteService/@item.ServiceId" class="btn btn-danger">Delete</a></td>
                    <td><a href="/Service/UpdateService/@item.ServiceId" class="btn btn-warning">Update</a></td>
                </tr>
            }

        </tbody>
    </table>

    <a href="/Service/AddService/" class="btn btn-primary">Add New Experience</a>
</div>
