@using EntityLayer.Concrete
@model List<Portfolio>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="row">
    <div class="col">
        <div class="card bg-default shadow">
            <div class="card-header bg-transparent border-0">
                <h3 class="text-white mb-0">Dark table</h3>
            </div>
            <div class="table-responsive">
                <table class="table align-items-center table-dark table-flush">
                    <thead class="thead-dark">
                        <tr>
                            <th scope="col" class="sort" data-sort="name">Project</th>
                            <th scope="col" class="sort" data-sort="budget">Budget</th>
                            <th scope="col" class="sort" data-sort="status">Status</th>
                    
                            <th scope="col" class="sort" data-sort="completion">Completion</th>
                            <th scope="col">Delete</th>
                            <th scope="col">Update</th>
                        </tr>
                    </thead>
                    <tbody class="list">
                        @foreach (var item in Model)
                        {


                            <tr>
                                <th scope="row">
                                    <div class="media align-items-center">
                                        <a href="#" class="avatar rounded-circle mr-3">
                                            <img alt="Image placeholder" src="@item.Platform">
                                        </a>
                                        <div class="media-body">
                                            <span class="name mb-0 text-sm">@item.Name</span>
                                        </div>
                                    </div>
                                </th>
                                <td class="budget">
                                    @item.Price
                                </td>
                                <td>
                                    <span class="badge badge-dot mr-4">
                                        @if (item.Ratio == 100)
                                        {
                                            <i class="bg-success"></i>
                                            <span class="status">Completed</span>
                                        }
                                        else
                                        {
                                            <i class="bg-warning"></i>
                                            <span class="status">Not Completed</span>
                                        }
                                        
                                    </span>
                                </td>
                                
                                <td>
                                    <div class="d-flex align-items-center">
                                        <span class="completion mr-2">@item.Ratio%</span>
                                        <div>
                                            <div class="progress">
                                                <div class="progress-bar bg-warning" role="progressbar" aria-valuenow="@item.Ratio" aria-valuemin="0" aria-valuemax="100" style="width: @item.Ratio%;"></div>
                                            </div>
                                        </div>
                                    </div>
                                </td>
                                <td><a href="/Portfolio/DeletePortfolio/@item.PortfolioId"class="btn btn-outline-danger">Delete</a></td>
                                <td><a href="/Portfolio/UpdatePortfolio/@item.PortfolioId"class="btn btn-outline-warning">Update</a></td>
                            </tr>
                        }
                    </tbody>
                </table>

            </div>
        </div>
    </div>
</div>
<br />
<a href="/Portfolio/AddPortfolio" class="btn btn-primary">Add New Portfolio</a>

