@model EntityLayer.Concrete.WriterMessage
@{
    ViewData["Title"] = "AdminMessageList";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">

            <p class="card-description"> Message Details </p>
            <form class="forms-sample">

                @* <div class="form-group">
                <label>ID</label>
                @Html.TextBoxFor(x => x.MeesageId, new { @class = "form-control" })
                </div> *@
                <div class="form-group">
                    <label>Title</label>
                    @Html.TextBoxFor(x => x.Subject, new { @class = "form-control", @readonly = "readonly" })
                </div>
                <div class="form-group">
                    <label>Date</label>
                    @Html.TextBoxFor(x => x.Date, new { @class = "form-control", @readonly = "readonly" })
                </div>
                <div class="form-group">
                    <label>Receiver</label>
                    @Html.TextBoxFor(x => x.ReceiverName, new { @class = "form-control", @readonly = "readonly" })
                </div>
                <div class="form-group">
                    <label>Sender</label>
                    @Html.TextBoxFor(x => x.SenderName, new { @class = "form-control", @readonly = "readonly" })
                </div>

                <div class="form-group">
                    <label for="exampleTextarea1">Description</label>
                    @Html.TextAreaFor(x => x.MessageContent, 6, 3, new { @class = "form-control", @readonly = "readonly" })
                </div>
                <a asp-action="SenderMessageList" class="btn btn-primary mr-2">Admin Sent</a>
                <a asp-action="ReceiverMessageList" class="btn btn-warning mr-2">Admin Inbox</a>

            </form>
        </div>
    </div>
</div>

