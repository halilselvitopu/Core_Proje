@using EntityLayer.Concrete
@model List<WriterMessage>
@{
    ViewData["Title"] = "SenderMessageList";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Admin Sent</h4>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            @* <th>#</th> *@
                            <th>Receiver</th>
                            <th>Subject</th>
                            <th>Date</th>
                            <th>Delete</th>
                            <th>Details</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {


                            <tr>
                                @* <td>@item.Id</td> *@
                                <td>@item.ReceiverName</td>
                                <td>@item.Subject</td>
                                <td>@item.Date</td>
                                <td><a href="/AdminMessage/AdminMessageDelete/@item.Id" class="btn btn-outline-danger">Delete</a></td>
                                <td><a href="/AdminMessage/AdminMessageList/@item.Id" class="btn btn-outline-success">See Message</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
               <a asp-for="AdminMessageAdd" class="btn btn-outline-primary">Add New Message</a>
            </div>
        </div>
    </div>
</div>

